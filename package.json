{
  "name": "sketch-sort-layer-list",
  "version": "0.3.0",
  "description": "A Sketch plugin for sorting the layer list by name or layer position",
  "keywords": [
    "plugin",
    "sketch",
    "sketch-plugin-helper"
  ],
  "license": "MIT",
  "author": "Lim Yuan Qing",
  "repository": "yuanqing/sketch-sort-layer-list",
  "dependencies": {
    "natural-compare-lite": "1.4.0"
  },
  "devDependencies": {
    "sketch-plugin-helper": "*"
  },
  "scripts": {
    "build": "sph build",
    "fix": "sph lint --fix",
    "lint": "sph lint",
    "symlink": "sph symlink",
    "unlink": "sph symlink --delete",
    "version": "sph version",
    "watch": "sph build --watch"
  },
  "sketch-plugin-helper": {
    "name": "Sort Layer List",
    "menu": [
      {
        "handler": "attributes/name",
        "label": "Sort Selected Layers By Name"
      },
      "-",
      {
        "handler": "attributes/x-position",
        "label": "Sort Selected Layers By X Position"
      },
      {
        "handler": "attributes/y-position",
        "label": "Sort Selected Layers By Y Position"
      },
      {
        "handler": "attributes/y-and-x-position",
        "label": "Sort Selected Layers By Y and X Position"
      },
      "-",
      {
        "handler": "attributes/smart-sort",
        "label": "Smart Sort"
      }
    ]
  }
}
