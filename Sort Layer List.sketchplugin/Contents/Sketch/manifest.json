{
  "name": "Sort Layer List",
  "description": "A Sketch plugin to sort the layer list by name or layer position",
  "author": "Lim Yuan Qing",
  "homepage": "https://github.com/yuanqing/sketch-sort-layer-list",
  "version": "0.5.0",
  "identifier": "yuanqing.sketch-sort-layer-list",
  "appcast": "https://raw.githubusercontent.com/yuanqing/sketch-sort-layer-list/master/appcast.xml",
  "bundleVersion": 1,
  "disableCocoaScriptPreprocessor": true,
  "commands": [
    {
      "name": "Sort Selected Layers By Name",
      "identifier": "yuanqing.sketch-sort-layer-list.attributes.name",
      "script": "plugin.js",
      "handler": "attributes/name"
    },
    {
      "name": "Sort Selected Layers By X Position",
      "identifier": "yuanqing.sketch-sort-layer-list.attributes.x-position",
      "script": "plugin.js",
      "handler": "attributes/x-position"
    },
    {
      "name": "Sort Selected Layers By Y Position",
      "identifier": "yuanqing.sketch-sort-layer-list.attributes.y-position",
      "script": "plugin.js",
      "handler": "attributes/y-position"
    },
    {
      "name": "Sort Selected Layers By Y and X Position",
      "identifier": "yuanqing.sketch-sort-layer-list.attributes.y-and-x-position",
      "script": "plugin.js",
      "handler": "attributes/y-and-x-position"
    },
    {
      "name": "Smart Sort",
      "identifier": "yuanqing.sketch-sort-layer-list.attributes.smart-sort",
      "script": "plugin.js",
      "handler": "attributes/smart-sort"
    }
  ],
  "menu": {
    "title": "Sort Layer List",
    "items": [
      "yuanqing.sketch-sort-layer-list.attributes.name",
      "-",
      "yuanqing.sketch-sort-layer-list.attributes.x-position",
      "yuanqing.sketch-sort-layer-list.attributes.y-position",
      "yuanqing.sketch-sort-layer-list.attributes.y-and-x-position",
      "-",
      "yuanqing.sketch-sort-layer-list.attributes.smart-sort"
    ]
  }
}
